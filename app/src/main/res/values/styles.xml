<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash layout -->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layout</item>
    </style>

    <!-- Styles dos alertDialogs -->

    <style name="MyAlertDialogStyleInfo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/primary_info</item>
    </style>

    <style name="MyAlertDialogStyleErro" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/primary_error</item>
    </style>

    <style name="MyAlertDialogStyleAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/primary_alert</item>
    </style>

    <style name="MyAlertDialogStyleSuccess" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/primary_success</item>
    </style>

    <style name="BtnDash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
