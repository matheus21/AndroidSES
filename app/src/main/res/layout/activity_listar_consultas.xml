<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_lista_pessoa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListarConsultasActivity">

    <RelativeLayout
        android:id="@+id/lytLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lstConsultas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        />

    <ImageButton
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btnNewPessoa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="addNovaConsulta"
        android:background="@drawable/circle_add_consulta"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/colorWhite"
        android:layout_gravity="end|bottom"/>

</LinearLayout>